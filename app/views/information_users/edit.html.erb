<% provide :title, t(".edit_user") %>
<div class="col-md-3">
  <%= render "static_pages/side_bar" %>
</div>
<div class="col-md-6 form-info">
  <br>
  <h1><%= t ".update_your_profile" %></h1>
  <br>
  <%= form_for @info do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group">
      <% if @info.image.attached? %>
        <%= label_tag :image, nil, class: "col-md-3" %>
        <%= image_tag @info.image.variant(resize: Settings.image_size) %><br>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      <% end %>
    </div>
    <div class="form-group">
      <%= label_tag :first_name, nil, class: "col-md-3" %>
      <%= f.text_field :first_name, class: "form-control col-md-8" %>
    </div>
    <div class="form-group">
      <%= label_tag :last_name, nil, class: "col-md-3" %>
      <%= f.text_field :last_name, class: "form-control col-md-8" %>
    </div>
    <div class="form-group">
      <%= label_tag :address, nil, class: "col-md-3" %>
      <%= f.text_field :address, class: "form-control col-md-8" %>
    </div>
    <div class="form-group">
      <%= label_tag :gender, nil, class: "col-md-3" %>
      <%= f.select :gender_id, options_for_select(show_gender,
        {selected: @info.gender_id}),{}, {class: "form-control col-md-8"} %>
    </div>
    <div class="form-group">
      <%= label_tag :birthday, nil, class: "col-md-3" %>
      <%= f.date_field :birthday, min: (I18n.localize 80.year.ago, format: :birthday_format),
        max: (I18n.localize Time.now, format: :birthday_format),:class => "col-md-8"  %>
    </div>
    <div class="form-group">
      <%= label_tag :height, nil, class: "col-md-3" %>
      <%= f.text_field :height, class: "form-control col-md-8" %>
    </div>
    <div class="form-group">
      <%= label_tag :weight, nil, class: "col-md-3" %>
      <%= f.text_field :weight, class: "form-control col-md-8" %>
    </div>
    <div class="form-group">
      <%= label_tag :education, nil, class: "col-md-3" %>
      <%= f.select :education, options_for_select(show_education,
        {selected: @info.education}),{}, {class: "form-control col-md-8"} %>
    </div>
    <div class="form-group">
      <%= label_tag :relationship, nil, class: "col-md-3" %>
      <%= f.select :relationship, options_for_select(show_relationship,
        {selected: @info.relationship}),{}, {class: "form-control col-md-8"} %>
    </div>

    <%= label_tag :children, nil, class: "col-md-3" %>
    <%= f.select :children, options_for_select(show_children,
      {selected: @info.children}),{}, {class: "form-control col-md-8"} %>

    <%= label_tag :religion, nil, class: "col-md-3" %>
    <%= f.text_field :religion, class: "form-control col-md-8" %>

    <%= label_tag :description, nil, class: "col-md-3" %>
    <%= f.text_field :description, class: "form-control col-md-8" %>
    <%= f.submit t(".save_changes"), class: "btn btn-primary" %>
    <% end %>
</div>
<div class="col-md-3"></div>
